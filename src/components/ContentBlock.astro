---
interface Props {
  text: string;
  highlight?: boolean;
}

const { text, highlight = false } = Astro.props;
---

<div class:list={['content-block', 'fade-in', { highlight }]}>
  <p>{text}</p>
</div>

<style>
  .content-block {
    padding: var(--space-xl) 0;
  }

  .content-block p {
    font-size: clamp(1.15rem, 2.8vw, 1.45rem);
    line-height: 1.85;
    color: var(--color-text);
    margin: 0;
    font-weight: 400;
  }

  .content-block.highlight p {
    color: var(--color-accent);
    font-weight: 500;
    text-shadow: 0 2px 12px rgba(255, 160, 122, 0.15);
  }
</style>
